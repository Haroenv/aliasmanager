#!/usr/bin/env ruby


require_relative '../lib/aliasmanager'

command = ARGV[0]

manager = AliasManager.new(cutoff: 5, history_size: 3000)

case command
when 'unaliased'
  manager.most_used_commands_without_aliases
when 'aliased'
  manager.most_used_aliases
when 'total'
  manager.total
when 'sequences'
  manager.most_used_consecutive_commands
when 'subcommands'
  manager.most_used_with_subcommands
when '--command'
  manager.most_used_options(ARGV[1])
when 'diagnose'

else
  manager.most_used_commands
end

